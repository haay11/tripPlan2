<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/toolbar_"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/textColorPrimary"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?attr/actionBarSize"
    >

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textColorPrimary"
        android:fitsSystemWindows="true"
        android:textStyle="bold"
        android:minHeight="?attr/actionBarSize"
        android:textSize="22dp"
        android:gravity="left|center"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginStart="14dp"
        android:visibility="invisible"
        android:src="@drawable/ic_icon_left_arrow" />

    <ImageView
        android:id="@+id/back_empty"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginStart="14dp"
        android:visibility="invisible"
        android:src="@drawable/ic_icon_left_arrow1" />

    <ImageView
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_icon_right_arrow"
        android:layout_gravity="center_vertical|right"
        android:visibility="invisible"
        android:layout_marginEnd="14dp"
        />

    <ImageView
        android:id="@+id/forward_empty"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_icon_right_arrow1"
        android:layout_gravity="center_vertical|right"
        android:visibility="invisible"
        android:layout_marginEnd="14dp"
        />

</FrameLayout>